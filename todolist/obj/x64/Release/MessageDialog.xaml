<UserControl
    x:Class="todolist.MessageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Popup x:ConnectionId='1' x:Name="m_Popup" VerticalAlignment="Center" >
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle x:ConnectionId='2' x:Name="m_Rect1" Fill="LightGray" 
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Left"
                           Opacity="0.25"/>
            <Rectangle x:ConnectionId='3' x:Name="m_Rect2" Fill="White" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           Height="140"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:ConnectionId='6' x:Name="m_TextBlock" FontSize="15" VerticalAlignment="Center" Margin="0,0,20,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:ConnectionId='4' Content="Ok" Margin="0,0,20,0"                  />
                    <Button x:ConnectionId='5' Content="Cancel"                      />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Popup>

</UserControl>

